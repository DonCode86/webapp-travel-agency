@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mt-3 mb-3">Lista pacchetti</h1>
                <div>
                    <input type="text" class="js_search form-control" placeholder="Cerca il tuo pacchetto">
                </div>
            </div>
        </div>
    </div>
    <div class="row js_no_post text-center d-none">
        <div class="col-12">
            <h3>Nessun pacchetto disponibile</h3>
        </div>
    </div>
    <div class="row js_post_table d-none">
        <!-- qui verranno mostrati gli elementi -->
    </div>
</div>

@section Scripts {

        <script type="text/javascript">
            loadList();
            function loadList(search) {
                    axios.get('/api/travelpackages/GetTravelPackages', {
                    params : {
                        search : search
                    }
                }).then((res) => {
                    console.log('risultato ok', res);
                    if (res.data.length == 0) {
                        document.querySelector('.js_no_post').classList.remove('d-none');
                        document.querySelector('.js_post_table').classList.add('d-none');
                    } else {
                        document.querySelector('.js_post_table').classList.remove('d-none');
                        document.querySelector('.js_no_post').classList.add('d-none');
                        document.querySelector('.js_post_table').innerHTML = '';
                        res.data.forEach(travelpachage => {
                                    console.log('travelpachage', travelpachage);
                            document.querySelector('.js_post_table').innerHTML += 
                                `
                                <div class="col-12 col-md-4 p-2">
                                    <div class="card post h-100">
                                              <a href="/Home/Details/${travelpachage.id}">
                                                  <img src="${travelpachage.image}" class="card-img-top" alt="...">
                                          <div class="card-body">
                                                    <h5 class="card-title">${travelpachage.name}</h5>
                                                    <p class="card-text">${travelpachage.description}</p>
                                                    <p class="card-text">prezzo: ${travelpachage.price}</p>
                                          </div>
                                      </a>    
                                    </div>
                                </div>
                                `;
                        });
                    }
                });
            }

            document.querySelector('.js_search').addEventListener('keyup', searchItems);
            function searchItems() {
                console.log('search items');
                loadList(this.value);
            }
        </script>
}

